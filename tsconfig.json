{
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "typings/**.ts"
  ]
}
