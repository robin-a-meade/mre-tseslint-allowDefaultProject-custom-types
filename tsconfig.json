{
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "typings"]
  },
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"]
}
